  "version": "2.0.0",
  "tasks": [ {
    "label": "Serve Angular",
    "type": "shell",
    "command": "ng",
    "args": [
      "serve"
    ],
    "options": {
      "cwd": "${workspaceFolder}",
      "shell": {
        "executable": "cmd.exe",
        "args": [
          "/d",
          "/c"
        ]
      },
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=9999" // Ajusta la memoria seg√∫n sea necesario
      }
    },
    "problemMatcher": [],
    "isBackground": true
  },
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    }
  ]
}
